<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        android:id="@+id/layout_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".login.LoginActivity">
    <LinearLayout
            android:id="@+id/layout_middle"
            android:orientation="vertical"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/logo_mandiri_color"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:background="@drawable/background_input_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView android:layout_width="32dp"
                       android:padding="6dp"
                       android:tint="@color/textInputUser1"
                       android:src="@drawable/ic_username"
                       android:layout_marginStart="8dp"
                       android:layout_gravity="center_vertical"
                       android:layout_height="32dp"/>
            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    app:hintEnabled="false"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:gravity="center_vertical"
                    android:layout_height="48dp">
                <android.support.design.widget.TextInputEditText
                        android:hint="Username"
                        android:id="@+id/textinput_username"
                        android:fontFamily="@font/nunito_regular"
                        android:inputType="text"
                        android:textColor="@color/textInputUser1"
                        android:background="@android:color/transparent"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
                android:background="@drawable/background_input_username"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView android:layout_width="32dp"
                       android:padding="6dp"
                       android:tint="@color/textInputUser1"
                       android:src="@drawable/ic_password"
                       android:layout_marginStart="8dp"
                       android:layout_gravity="center_vertical"
                       android:layout_height="32dp"/>
            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"

                    app:hintEnabled="false"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:passwordToggleEnabled="true"
                    android:gravity="center_vertical"
                    android:layout_height="48dp">
                <android.support.design.widget.TextInputEditText
                        android:id="@+id/textinput_password"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:textColor="@color/textInputUser1"
                        android:background="@android:color/transparent"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <Button
                android:id="@+id/button_login"
                android:background="@drawable/background_button_login"
                android:textAllCaps="false"
                android:text="Masuk"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/nunito_bold"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>

        <TextView
                android:fontFamily="@font/nunito_bold"
                android:textColor="@color/textMandiri"
                android:textSize="16sp"
                android:layout_marginTop="22dp"
                android:layout_gravity="center_horizontal"
                android:text="Lupa Password?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/button_daftar"
                android:background="@drawable/background_button_login_outline"
                android:textAllCaps="false"
                android:text="Daftar"
                android:textSize="16sp"
                android:textColor="#003D79"
                android:fontFamily="@font/nunito_bold"
                android:layout_marginTop="22dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>
    </LinearLayout>
    <include
            android:visibility="gone"
            layout="@layout/partial_progress"/>
</android.support.constraint.ConstraintLayout>