<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        android:id="@+id/layout_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".login.LoginActivity">
    <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/background_login"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
    <TextView
            android:textSize="35sp"
            android:fontFamily="@font/nunito_extrabold"
            android:textColor="#22396c"
            android:text="Welcome"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintBottom_toTopOf="@id/text_deskripsi_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/text_deskripsi_login"
            android:textSize="15sp"
            android:fontFamily="@font/nunito_regular"
            android:textColor="#4c66a2"
            android:layout_marginBottom="55dp"
            android:text="Login to your account to continue"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintBottom_toTopOf="@id/layout_middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <LinearLayout
            android:id="@+id/layout_middle"
            android:orientation="vertical"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                app:hintEnabled="false"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:gravity="center_vertical"
                android:background="@drawable/background_input_username"
                android:layout_height="48dp">
            <android.support.design.widget.TextInputEditText
                    android:hint="Username"
                    android:id="@+id/textinput_username"
                    android:fontFamily="@font/nunito_regular"
                    android:inputType="text"
                    android:textColor="@color/textInputUser"
                    android:background="@android:color/transparent"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                app:hintEnabled="false"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:passwordToggleEnabled="true"
                android:gravity="center_vertical"
                android:background="@drawable/background_input_username"
                android:layout_height="48dp">
            <android.support.design.widget.TextInputEditText
                    android:id="@+id/textinput_password"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor="@color/textInputUser"
                    android:background="@android:color/transparent"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

        <Button
                android:id="@+id/button_login"
                android:background="@drawable/background_button_login"
                android:textAllCaps="false"
                android:text="Login"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/nunito_bold"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>

        <TextView
                android:fontFamily="@font/nunito_bold"
                android:textColor="#2fc8b3"
                android:textSize="16sp"
                android:layout_marginTop="22dp"
                android:layout_gravity="center_horizontal"
                android:text="Forgot Password?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <include
            android:visibility="gone"
            layout="@layout/partial_progress"/>
</android.support.constraint.ConstraintLayout>