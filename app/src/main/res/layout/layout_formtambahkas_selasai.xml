<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
            android:id="@+id/text_title"
            android:background="@color/textMandiri"
            android:textColor="#ffb700"
            android:padding="12dp"
            android:fontFamily="@font/nunito_extrabold"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Form Tambah Kas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <RelativeLayout
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            android:background="@drawable/background_input_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                app:hintEnabled="false"
                android:paddingStart="16dp"
                android:paddingEnd="32dp"
                android:gravity="center_vertical"
                android:layout_height="48dp">
            <android.support.design.widget.TextInputEditText
                    android:hint="Judul Kas"
                    android:fontFamily="@font/nunito_regular"
                    android:inputType="text"
                    android:textColor="@color/textInputUser1"
                    android:background="@android:color/transparent"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>

    <RelativeLayout
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            android:background="@drawable/background_input_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                app:hintEnabled="false"
                android:paddingStart="16dp"
                android:paddingEnd="32dp"
                android:gravity="center_vertical"
                android:layout_height="48dp">
            <android.support.design.widget.TextInputEditText
                    android:hint="Tipe Kas"
                    android:fontFamily="@font/nunito_regular"
                    android:inputType="text"
                    android:textColor="@color/textInputUser1"
                    android:background="@android:color/transparent"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

        <ImageView android:layout_width="32dp"
                   android:layout_alignParentEnd="true"
                   android:padding="6dp"
                   android:layout_marginEnd="8dp"
                   android:layout_centerVertical="true"
                   android:tint="@color/textInputUser1"
                   android:src="@drawable/ic_dropdown"
                   android:layout_marginStart="8dp"
                   android:layout_gravity="center_vertical"
                   android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            android:background="@drawable/background_input_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                app:hintEnabled="false"
                android:paddingStart="16dp"
                android:paddingEnd="32dp"
                android:gravity="center_vertical"
                android:layout_height="48dp">
            <android.support.design.widget.TextInputEditText
                    android:hint="Tanggal"
                    android:id="@+id/textinput_dari"
                    android:fontFamily="@font/nunito_regular"
                    android:inputType="text"
                    android:textColor="@color/textInputUser1"
                    android:background="@android:color/transparent"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

        <ImageView android:layout_width="32dp"
                   android:layout_alignParentEnd="true"
                   android:padding="6dp"
                   android:layout_marginEnd="8dp"
                   android:layout_centerVertical="true"
                   android:tint="@color/textInputUser1"
                   android:src="@drawable/ic_calendar"
                   android:layout_marginStart="8dp"
                   android:layout_gravity="center_vertical"
                   android:layout_height="32dp"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            android:background="@drawable/background_input_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                app:hintEnabled="false"
                android:paddingStart="16dp"
                android:paddingEnd="32dp"
                android:gravity="center_vertical"
                android:layout_height="48dp">
            <android.support.design.widget.TextInputEditText
                    android:hint="Harga"
                    android:fontFamily="@font/nunito_regular"
                    android:inputType="text"
                    android:textColor="@color/textInputUser1"
                    android:background="@android:color/transparent"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>

    <RelativeLayout
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            android:background="@drawable/background_input_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                app:hintEnabled="false"
                android:paddingStart="16dp"
                android:paddingEnd="32dp"
                android:gravity="center_vertical"
                android:layout_height="48dp">
            <android.support.design.widget.TextInputEditText
                    android:hint="Keterangan"
                    android:fontFamily="@font/nunito_regular"
                    android:inputType="text"
                    android:textColor="@color/textInputUser1"
                    android:background="@android:color/transparent"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>
    <LinearLayout
            android:layout_marginEnd="16dp"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="Batal"
                  android:layout_marginTop="16dp"
                  android:textColor="#ffb700"
                  android:padding="16dp"
                  android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/text_tambah"
                android:layout_width="wrap_content"
                android:text="Tambah"
                  android:layout_marginTop="16dp"
                  android:textColor="@color/textMandiri"
                  android:padding="16dp"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>