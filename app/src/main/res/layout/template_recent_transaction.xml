<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="73dp" xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
            android:id="@+id/image_avatar"
            android:src="@drawable/sample_product"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/line1"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    <RelativeLayout
            android:layout_width="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/line1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_avatar"
            android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent"
                  android:id="@+id/text_namacustomer"
                  android:textSize="13sp"
                  android:fontFamily="@font/nunito_bold"
                  android:text="Kopi Bobob"
                  android:includeFontPadding="false"
                  android:textColor="@color/textInputUser1"
                  android:ellipsize="end"
                  android:layout_marginEnd="10dp"
                  android:layout_toStartOf="@id/text_invoice"
                  android:maxLines="1"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_alignParentEnd="true"
                  android:id="@+id/text_invoice"
                  android:textSize="10sp"
                  android:fontFamily="@font/nunito_regular"
                  android:text="#432549"
                  android:includeFontPadding="false"
                  android:textColor="#808080"
                  android:ellipsize="end"
                  android:maxLines="1"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="match_parent"
                  android:id="@+id/text_tanggal"
                  android:textSize="10sp"
                  android:fontFamily="@font/nunito_regular"
                  android:text="July 9, 2020 12:00 PM"
                  android:includeFontPadding="false"
                  android:textColor="#808080"
                  android:ellipsize="end"
                  android:layout_below="@id/text_namacustomer"
                  android:layout_marginEnd="10dp"
                  android:layout_toStartOf="@id/text_totalprize"
                  android:maxLines="1"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_alignParentEnd="true"
                  android:id="@+id/text_totalprize"
                  android:textSize="15sp"
                  android:fontFamily="@font/nunito_extrabold"
                  android:text="Rp. 80.0000"
                  android:includeFontPadding="false"
                  android:textColor="#f9863d"
                  android:ellipsize="end"
                  android:maxLines="1"
                  android:layout_below="@id/text_invoice"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
            android:id="@+id/line1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="#ececec"
            android:layout_width="0dp"
            android:layout_height="1dp"/>
</android.support.constraint.ConstraintLayout>