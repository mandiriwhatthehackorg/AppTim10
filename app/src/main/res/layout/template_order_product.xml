<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.joooonho.SelectableRoundedImageView
            android:minHeight="60dp"
            android:minWidth="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/image_product"
            app:sriv_left_top_corner_radius="15dp"
            app:sriv_right_top_corner_radius="15dp"
            app:sriv_left_bottom_corner_radius="15dp"
            app:sriv_right_bottom_corner_radius="15dp"
            android:layout_width="60dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:layout_height="60dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toEndOf="@id/image_product"
            app:layout_constraintEnd_toStartOf="@id/layout_qty"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent"
                  android:id="@+id/text_namaproduct"
                  android:textSize="15sp"
                  android:fontFamily="@font/nunito_bold"
                  android:text="Nescafe"
                  android:includeFontPadding="false"
                  android:textColor="@color/textInputUser1"
                  android:ellipsize="end"
                  android:maxLines="1"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="match_parent"
                  android:id="@+id/text_priceperitem"
                  android:textSize="12sp"
                  android:fontFamily="@font/nunito_regular"
                  android:text="Rp. 25.000"
                  android:includeFontPadding="false"
                  android:textColor="#888383"
                  android:ellipsize="end"
                  android:maxLines="1"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/layout_qty"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="30dp">
        <FrameLayout
                android:visibility="gone"
                android:background="@drawable/shape_order_buttonmin"
                android:layout_width="30dp"
                android:id="@+id/frame_minus"
                android:layout_height="30dp">
            <ImageView
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_minus"
                    android:layout_gravity="center"
                    android:layout_width="12dp"
                    android:layout_height="2dp"/>
        </FrameLayout>

        <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                  android:id="@+id/text_qty"
                  android:textSize="18sp"
                  android:fontFamily="@font/nunito_semibold"
                  android:text="2"
                  android:paddingStart="8dp"
                  android:paddingEnd="8dp"
                  android:layout_gravity="center"
                  android:includeFontPadding="false"
                  android:textColor="#888383"
                  android:ellipsize="end"
                  android:maxLines="1"
                  android:layout_height="wrap_content"/>
        <FrameLayout
            android:background="@drawable/shape_order_buttonadd"
            android:layout_width="30dp"
            android:id="@+id/frame_plus"
            android:layout_height="30dp">
            <ImageView
                android:src="@drawable/ic_plus"
                android:layout_gravity="center"
                android:layout_width="12dp"
                android:layout_height="12dp"/>
        </FrameLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>