<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="0dp"
        android:background="#ffffff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_width="match_parent"
                android:layout_height="136dp"
                android:id="@+id/view_header"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/shape_home_header"/>

            <ImageView
                android:layout_width="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                android:adjustViewBounds="false"
                android:src="@drawable/background_header_home"
                android:layout_height="wrap_content"/>


            <ImageView
                android:id="@+id/ic_back"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/ic_cross"
                android:padding="8dp"
                app:layout_constraintTop_toTopOf="@id/text_name"
                app:layout_constraintBottom_toBottomOf="@id/text_name"
                android:layout_marginStart="14dp"
                android:layout_width="32dp"
                android:layout_height="32dp"/>

            <TextView
                android:layout_width="0dp"
                android:id="@+id/text_name"
                android:textSize="20sp"
                android:layout_marginTop="40dp"
                android:includeFontPadding="false"
                android:fontFamily="@font/nunito_extrabold"
                android:text="Invoice"
                android:textColor="#ffffff"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/ic_back"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="wrap_content"/>

            <com.application.library.shadow.ShadowView
                android:id="@+id/shadow_view"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:shadowColor="#14000000"
                app:cornerRadius="12dp"
                app:shadowMarginTop="15dp"
                app:shadowMarginLeft="20dp"
                app:shadowMarginRight="20dp"
                app:shadowMarginBottom="25dp"
                android:layout_marginTop="88dp"
                app:shadowRadius="5dp">
                <android.support.v7.widget.CardView
                    app:cardCornerRadius="5dp"
                    app:cardUseCompatPadding="false"
                    app:cardBackgroundColor="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <View
                            android:layout_width="match_parent"
                            android:id="@+id/view_line"
                            app:layout_constraintTop_toTopOf="parent"
                            android:background="#f7fcff"
                            android:layout_height="35dp"/>
                        <TextView
                            android:textSize="15sp"
                            android:id="@+id/text_invoice"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:includeFontPadding="false"
                            android:textColor="#22396c"
                            android:text="#FR534G"
                            android:fontFamily="@font/nunito_bold"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginStart="15dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="@id/view_line"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textSize="13sp"
                            android:id="@+id/text_date"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:includeFontPadding="false"
                            android:textColor="#9b938e"
                            android:text="@string/loading"
                            android:fontFamily="@font/nunito_semibold"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="15dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="@id/view_line"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                                android:id="@+id/image_user"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="17dp"
                                android:layout_marginBottom="17dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/view_line"
                                android:layout_width="40dp"
                                android:layout_height="40dp"/>
                        <LinearLayout
                                android:orientation="vertical"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/image_user"
                                app:layout_constraintTop_toTopOf="@id/image_user"
                                app:layout_constraintBottom_toBottomOf="@id/image_user"
                                android:layout_width="0dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="15dp"
                                android:layout_height="wrap_content">
                            <TextView
                                    android:textSize="15sp"
                                    android:id="@+id/text_namacustomer"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:includeFontPadding="false"
                                    android:textColor="#22396c"
                                    android:text="@string/loading"
                                    android:fontFamily="@font/nunito_bold"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                            <TextView
                                    android:textSize="12sp"
                                    android:id="@+id/text_customer"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:includeFontPadding="false"
                                    android:textColor="#808080"
                                    android:text="Customer"
                                    android:fontFamily="@font/nunito_bold"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>


                    </android.support.constraint.ConstraintLayout>
                </android.support.v7.widget.CardView>
            </com.application.library.shadow.ShadowView>


            <android.support.v7.widget.RecyclerView
                    android:orientation="horizontal"
                    android:id="@+id/recycler_productreview"
                    app:layout_constraintTop_toBottomOf="@id/shadow_view"
                    app:layout_constraintBottom_toTopOf="@id/txt_subtotal"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_height="0dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/txt_subtotal"
                    android:textSize="18sp"
                    android:fontFamily="@font/nunito_bold"
                    android:text="Subtotal"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/text_pajak"
                    android:includeFontPadding="false"
                    android:textColor="#393939"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/text_total"
                    android:textSize="15sp"
                    android:fontFamily="@font/nunito_semibold"
                    android:text="@string/loading"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/text_pajak"
                    android:includeFontPadding="false"
                    android:textColor="#454545"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/txt_pajak"
                    android:textSize="13sp"
                    android:fontFamily="@font/nunito_semibold"
                    android:text="Pajak"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/view_line1"
                    android:includeFontPadding="false"
                    android:textColor="#939393"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/text_pajak"
                    android:textSize="13sp"
                    android:fontFamily="@font/nunito_semibold"
                    android:text="@string/loading"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/view_line1"
                    android:includeFontPadding="false"
                    android:textColor="#939393"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_height="wrap_content"/>


            <View
                    android:background="#ececec"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="15dp"
                    android:id="@+id/view_line1"
                    app:layout_constraintBottom_toTopOf="@id/txt_total"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/txt_total"
                    android:textSize="20sp"
                    android:fontFamily="@font/nunito_bold"
                    android:text="Total"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/layout_bottom"
                    android:includeFontPadding="false"
                    android:textColor="@color/textInputUser1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/text_totalprice"
                    android:textSize="20sp"
                    android:fontFamily="@font/nunito_bold"
                    android:text="@string/loading"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/layout_bottom"
                    android:includeFontPadding="false"
                    android:textColor="@color/textInputUser1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:id="@+id/layout_bottom"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:weightSum="1"
                    android:layout_height="wrap_content">
                <FrameLayout
                        android:id="@+id/button_share"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/shape_customer_skip"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="48dp">
                    <ImageView
                            android:layout_marginStart="20dp"
                            android:layout_gravity="center_vertical"
                            android:scaleType="fitXY"
                            android:layout_width="18dp"
                            android:src="@drawable/ic_share"
                            android:layout_height="20dp"/>
                    <TextView
                            android:layout_marginStart="62dp"
                            android:layout_marginEnd="20dp"
                            android:textSize="15sp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:textColor="#fa7421"
                            android:text="Share"
                            android:fontFamily="@font/nunito_bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                </FrameLayout>
                <FrameLayout
                        android:layout_marginStart="10dp"
                        android:background="@drawable/shape_customer_skip"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="48dp">
                    <ImageView
                            android:layout_marginStart="20dp"
                            android:layout_gravity="center_vertical"
                            android:scaleType="fitXY"
                            android:layout_width="20dp"
                            android:src="@drawable/ic_printer_yellow"
                            android:layout_height="20dp"/>
                    <TextView
                            android:layout_marginStart="62dp"
                            android:layout_marginEnd="20dp"
                            android:textSize="15sp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:textColor="#fa7421"
                            android:text="Print"
                            android:fontFamily="@font/nunito_bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                </FrameLayout>


            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </android.support.design.widget.CoordinatorLayout>
    <include
            android:visibility="gone"
            layout="@layout/partial_progress"/>
</android.support.constraint.ConstraintLayout>