<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:id="@+id/text_namacustomer"
        android:textSize="15sp"
        android:fontFamily="@font/nunito_bold"
        android:text="Kopi Bobob"
        android:includeFontPadding="false"
        android:textColor="@color/textInputUser"
        android:ellipsize="end"
        android:layout_marginEnd="20dp"
        android:maxLines="1"
        android:layout_height="wrap_content"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/text_namacustomer"
            android:layout_marginTop="1dp"
            android:id="@+id/text_subnamacustomer"
            android:textSize="13sp"
            android:fontFamily="@font/nunito_semibold"
            android:text="Kopi Bobob"
            android:includeFontPadding="false"
            android:textColor="#939393"
            android:ellipsize="end"
            android:layout_marginEnd="20dp"
            android:maxLines="1"
            android:layout_height="wrap_content"/>

    <View
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/text_subnamacustomer"
            android:id="@+id/line1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="#ececec"
            android:layout_width="0dp"
            android:layout_height="1dp"/>
</android.support.constraint.ConstraintLayout>