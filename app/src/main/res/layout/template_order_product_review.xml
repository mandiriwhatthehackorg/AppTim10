<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
            android:layout_width="match_parent"
            android:id="@+id/text_nama"
            android:textSize="18sp"
            android:fontFamily="@font/nunito_bold"
            android:text="Nescafe"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:includeFontPadding="false"
            android:textColor="@color/textInputUser"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_height="wrap_content"/>
    <LinearLayout
            app:layout_constraintEnd_toStartOf="@id/text_totalperitem"
            app:layout_constraintStart_toStartOf="@id/text_nama"
            app:layout_constraintTop_toBottomOf="@id/text_nama"
            android:id="@+id/layout_text"
            android:layout_marginTop="9dp"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:id="@+id/text_qtysold"
                android:textSize="12sp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:background="@drawable/shape_order_labelqty"
                android:fontFamily="@font/nunito_semibold"
                android:text="2 Pcs"
                android:includeFontPadding="false"
                android:textColor="#0084f4"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:id="@+id/text_priceperitem"
                android:textSize="13sp"
                android:fontFamily="@font/nunito_semibold"
                android:text="Rp. 25.000"
                android:includeFontPadding="false"
                android:textColor="#939393"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
            android:layout_marginEnd="20dp"
            android:layout_width="wrap_content"
            android:id="@+id/text_totalperitem"
            android:textSize="15sp"
            android:fontFamily="@font/nunito_bold"
            android:text="Rp. 25.000"
            android:includeFontPadding="false"
            android:textColor="#454545"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/layout_text"
            android:maxLines="1"
            android:layout_height="wrap_content"/>
    <View
            android:background="#ececec"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/view_line1"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_text"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
</android.support.constraint.ConstraintLayout>