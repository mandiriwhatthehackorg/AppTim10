<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SplashActivity">


    <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/background_splash"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
    <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/illustration_splash"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:adjustViewBounds="true"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textSize="35sp"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/nunito_extrabold"
            android:textColor="#22396c"
            android:text="Welcome"
            android:id="@+id/text_title_splash"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/text_deskripsi_login"
            android:textSize="15sp"
            android:fontFamily="@font/nunito_regular"
            android:textColor="#4c66a2"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur ut porttitor turpis, eu egestas libero. "
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toBottomOf="@id/text_title_splash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_deskripsi_login"
            android:background="@drawable/background_button_login"
            android:textAllCaps="false"
            android:text="Get Start"
            android:paddingStart="48dp"
            android:paddingEnd="48dp"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/nunito_bold"
            android:layout_marginStart="30dp"
            android:layout_width="wrap_content"
            android:layout_height="48dp"/>
</android.support.constraint.ConstraintLayout>