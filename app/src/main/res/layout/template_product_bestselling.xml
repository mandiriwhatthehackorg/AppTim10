<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.application.library.shadow.ShadowView
            android:id="@+id/shadow_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:shadowColor="#14000000"
            app:cornerRadius="12dp"
            app:shadowMargin="15dp"
            app:shadowRadius="14dp">
        <android.support.v7.widget.CardView
                app:cardCornerRadius="12dp"
                app:cardUseCompatPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <RelativeLayout
                    android:layout_width="220dp"
                    android:layout_height="90dp">
                <com.joooonho.SelectableRoundedImageView
                        android:minHeight="60dp"
                        android:minWidth="60dp"
                        android:id="@+id/image_product"
                        app:sriv_left_top_corner_radius="15dp"
                        app:sriv_right_top_corner_radius="15dp"
                        app:sriv_left_bottom_corner_radius="15dp"
                        app:sriv_right_bottom_corner_radius="15dp"
                        android:layout_width="60dp"
                        android:scaleType="centerCrop"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginStart="20dp"
                        android:layout_height="60dp"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_toEndOf="@id/image_product"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView android:layout_width="match_parent"
                              android:id="@+id/text_namaproduct"
                              android:textSize="15sp"
                              android:fontFamily="@font/nunito_bold"
                              android:text="Kopi Bobob"
                              android:includeFontPadding="false"
                              android:textColor="@color/textInputUser1"
                              android:ellipsize="end"
                              android:maxLines="1"
                              android:layout_height="wrap_content"/>
                    <TextView android:layout_width="match_parent"
                              android:id="@+id/text_qtysold"
                              android:textSize="12sp"
                              android:fontFamily="@font/nunito_regular"
                              android:text="1.1k sold"
                              android:includeFontPadding="false"
                              android:textColor="#888383"
                              android:ellipsize="end"
                              android:maxLines="1"
                              android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </com.application.library.shadow.ShadowView>
</FrameLayout>