<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        tools:context=".SplashActivity">
    <LinearLayout
            android:padding="24dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content">
        <ImageView
               android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:src="@drawable/logo_mandiri_color"
                android:layout_height="wrap_content"/>
        <TextView
                android:textColor="#3C3C3C"
                android:layout_marginTop="24dp"
                android:text="Selamat Datang Layanan One Solution UKM Service, is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries."
                android:fontFamily="@font/nunito_semibold"
                android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>

        <TextView
                android:textColor="#3C3C3C"
                android:gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:text="Masuk Sebagai"
                android:fontFamily="@font/nunito_extrabold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/button_usaha"
                android:background="@drawable/background_button_login"
                android:textAllCaps="false"
                android:text="Pemilik Usaha"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/nunito_bold"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>

        <Button
                android:id="@+id/button_kasir"
                android:background="@drawable/background_button_login"
                android:textAllCaps="false"
                android:text="Kasir"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/nunito_bold"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>