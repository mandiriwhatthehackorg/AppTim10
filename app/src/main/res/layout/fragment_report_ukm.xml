<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:id="@+id/view_header"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/shape_home_header"/>

    <ImageView
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:adjustViewBounds="false"
        android:src="@drawable/background_header_home"
        android:layout_height="wrap_content"/>

    <TextView android:layout_width="0dp"
              android:id="@+id/text_title"
              android:textSize="20sp"
              android:includeFontPadding="false"
              android:fontFamily="@font/nunito_extrabold"
              android:text="Report"
              android:textColor="#ffffff"
              android:layout_marginTop="40dp"
              android:layout_marginEnd="20dp"
              android:layout_marginStart="20dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              android:ellipsize="end"
              android:maxLines="1"
              app:layout_constraintEnd_toStartOf="@id/card_datepicker"
              android:layout_height="wrap_content"/>

    <android.support.v7.widget.CardView
            android:id="@+id/card_datepicker"
            app:cardUseCompatPadding="false"
            app:cardCornerRadius="10dp"
            android:layout_width="35dp"
            app:layout_constraintTop_toTopOf="@id/text_title"
            app:layout_constraintBottom_toBottomOf="@id/text_title"
            app:cardBackgroundColor="#ffffff"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="35dp">
        <ImageView
                android:scaleType="fitXY"
                android:tint="#808080"
                android:src="@drawable/ic_calendar"
                android:layout_gravity="center"
                android:layout_width="18dp"
                android:layout_height="20dp"/>
    </android.support.v7.widget.CardView>

    <com.lijiankun24.shadowlayout.ShadowLayout
            android:id="@+id/a2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_title"
            app:shadowColor="#14000000"
            app:shadowDx="0dp"
            app:shadowDy="3dp"
            app:shadowRadius="15dp"
            app:shadowSide="all">
        <android.support.constraint.ConstraintLayout
                android:background="@drawable/shape_home_header1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <FrameLayout
                    android:layout_marginTop="20dp"
                    android:id="@+id/avatar"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/shape_home_circle"
                    android:layout_width="48dp"
                    android:layout_height="48dp">
                <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_shopper"
                        android:layout_width="25dp"
                        android:layout_height="23dp"/>
            </FrameLayout>
            <LinearLayout
                    android:id="@+id/layout_title"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/avatar"
                    app:layout_constraintTop_toTopOf="@id/avatar"
                    app:layout_constraintBottom_toBottomOf="@id/avatar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                <TextView android:layout_width="match_parent"
                          android:id="@+id/text_namashop"
                          android:textSize="20sp"
                          android:fontFamily="@font/nunito_extrabold"
                          android:text="@string/loading"
                          android:includeFontPadding="false"
                          android:textColor="@color/textInputUser1"
                          app:layout_constraintTop_toBottomOf="@id/text_morning"
                          app:layout_constraintStart_toStartOf="parent"
                          android:ellipsize="end"
                          android:maxLines="1"
                          app:layout_constraintEnd_toEndOf="parent"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="match_parent"
                          android:id="@+id/text_address"
                          android:textSize="12sp"
                          android:fontFamily="@font/nunito_semibold"
                          android:text="@string/loading"
                          android:includeFontPadding="false"
                          android:textColor="#a3a3a3"
                          app:layout_constraintTop_toBottomOf="@id/text_morning"
                          app:layout_constraintStart_toStartOf="parent"
                          android:ellipsize="end"
                          android:maxLines="1"
                          app:layout_constraintEnd_toEndOf="parent"
                          android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView android:layout_width="match_parent"
                      android:id="@+id/caption_salestoday"
                      android:textSize="10sp"
                      android:fontFamily="@font/nunito_regular"
                      android:text="Sales Today"
                      android:includeFontPadding="false"
                      android:textColor="#808080"
                      android:gravity="center_horizontal"
                      app:layout_constraintTop_toBottomOf="@id/layout_title"
                      app:layout_constraintStart_toStartOf="parent"
                      android:ellipsize="end"
                      android:layout_marginTop="26dp"
                      android:maxLines="1"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/text_totalsale"
                    android:textSize="25sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:textColor="#fb7c2b"
                    android:text="@string/loading"
                    android:gravity="center_horizontal"
                    android:fontFamily="@font/nunito_extrabold"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="6dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/caption_salestoday"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>


            <View android:layout_width="match_parent"
                  android:id="@+id/a1"
                  app:layout_constraintTop_toTopOf="@id/caption_transaksi"
                  android:background="@drawable/shape_home_header2"
                  app:layout_constraintBottom_toBottomOf="@id/caption_transaksi"
                  android:layout_height="0dp"/>
            <TextView android:layout_width="wrap_content"
                      android:textSize="13sp"
                      android:id="@+id/caption_transaksi"
                      android:fontFamily="@font/nunito_bold"
                      android:text="Total Transaction"
                      android:layout_marginTop="13dp"
                      android:paddingBottom="11dp"
                      android:paddingTop="11dp"
                      android:layout_marginStart="20dp"
                      android:includeFontPadding="false"
                      android:textColor="#808080"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintTop_toBottomOf="@id/text_totalsale"
                      app:layout_constraintStart_toStartOf="parent"
                      android:ellipsize="end"
                      android:maxLines="1"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:textSize="13sp"
                      android:id="@+id/text_totaltransaksi"
                      android:fontFamily="@font/nunito_extrabold"
                      android:text="@string/loading"
                      android:paddingBottom="11dp"
                      android:paddingTop="11dp"
                      android:layout_marginEnd="20dp"
                      android:includeFontPadding="false"
                      android:textColor="#f9863d"
                      app:layout_constraintTop_toTopOf="@id/caption_transaksi"
                      app:layout_constraintBottom_toBottomOf="@id/caption_transaksi"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:ellipsize="end"
                      android:maxLines="1"
                      android:layout_height="wrap_content"/>
        </android.support.constraint.ConstraintLayout>

    </com.lijiankun24.shadowlayout.ShadowLayout>

    <TextView android:layout_width="0dp"
              android:id="@+id/a3"
              android:textSize="15sp"
              android:fontFamily="@font/nunito_extrabold"
              android:text="Product Sold"
              android:textColor="#535353"
              android:layout_marginStart="20dp"
              android:layout_marginEnd="20dp"
              app:layout_constraintTop_toBottomOf="@id/a2"
              app:layout_constraintStart_toStartOf="parent"
              android:ellipsize="end"
              android:maxLines="1"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_height="wrap_content"/>
    <android.support.v7.widget.RecyclerView
            android:orientation="horizontal"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:id="@+id/list_productsold"
            app:layout_constraintTop_toBottomOf="@id/a3"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

    <include
            android:visibility="gone"
            layout="@layout/partial_progress"/>
</android.support.constraint.ConstraintLayout>