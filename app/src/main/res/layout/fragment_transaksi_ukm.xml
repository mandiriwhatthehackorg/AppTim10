<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:id="@+id/view_header"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/shape_home_header"/>

    <ImageView
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:adjustViewBounds="false"
        android:src="@drawable/background_header_home"
        android:layout_height="wrap_content"/>

    <TextView android:layout_width="0dp"
              android:id="@+id/text_nama"
              android:textSize="20sp"
              android:includeFontPadding="false"
              android:fontFamily="@font/nunito_extrabold"
              android:text="Transaksi"
              android:textColor="#ffffff"
              android:layout_marginEnd="20dp"
              android:layout_marginStart="20dp"
              android:layout_marginBottom="10dp"
              app:layout_constraintBottom_toTopOf="@id/shadow_view"
              app:layout_constraintStart_toStartOf="parent"
              android:ellipsize="end"
              android:maxLines="1"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_height="wrap_content"/>
    <FrameLayout
            android:layout_marginTop="156dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        <android.support.v7.widget.RecyclerView
                android:id="@+id/list_transaksi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        <include
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                layout="@layout/partial_progress_paging"/>
    </FrameLayout>

    <com.application.library.shadow.ShadowView
            android:id="@+id/shadow_view"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:shadowColor="#14000000"
            app:cornerRadius="12dp"
            app:shadowMarginTop="15dp"
            app:shadowMarginLeft="20dp"
            app:shadowMarginRight="20dp"
            app:shadowMarginBottom="25dp"
            android:layout_marginTop="72dp"
            app:shadowRadius="5dp">
        <android.support.v7.widget.CardView
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="false"
            app:cardBackgroundColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="68dp">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.CardView
                        android:id="@+id/card_datepicker"
                    app:cardUseCompatPadding="false"
                    app:cardCornerRadius="5dp"
                    android:layout_width="36dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:cardBackgroundColor="#fd8c40"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="36dp">
                    <ImageView
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_calendar"
                            android:layout_gravity="center"
                        android:layout_width="20dp"
                        android:layout_height="22dp"/>
                </android.support.v7.widget.CardView>

                <FrameLayout
                        app:layout_constraintTop_toTopOf="@id/card_datepicker"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/shape_transaksi_search"
                        android:layout_marginStart="20dp"
                        app:layout_constraintEnd_toStartOf="@id/card_datepicker"
                        app:layout_constraintBottom_toBottomOf="@id/card_datepicker"
                        android:layout_width="0dp"
                        android:layout_height="0dp">
                    <EditText
                            android:inputType="text"
                            android:layout_width="match_parent"
                            android:id="@+id/edit_search"
                            android:textSize="12sp"
                            android:includeFontPadding="false"
                            android:fontFamily="@font/nunito_regular"
                            android:hint="Search"
                            android:background="@android:color/transparent"
                            android:gravity="center_vertical"
                            android:textColor="#d0c9d6"
                            android:layout_marginEnd="44dp"
                            android:layout_marginStart="10dp"
                            android:maxLines="1"
                            android:layout_height="match_parent"/>
                    <ImageView
                            android:layout_gravity="end|center_vertical"
                            android:layout_width="21dp"
                            android:src="@drawable/ic_search"
                            android:layout_marginEnd="10dp"
                            android:layout_height="21dp"/>
                </FrameLayout>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>
    </com.application.library.shadow.ShadowView>

    <include
            android:visibility="gone"
            layout="@layout/partial_progress"/>
</android.support.constraint.ConstraintLayout>